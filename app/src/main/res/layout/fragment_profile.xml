<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <RelativeLayout
        android:id="@+id/rlComtainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/holo_orange_dark">

        <Button
            android:id="@+id/bt_selected_photo"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/iv_photo"
            android:layout_marginStart="-22dp"
            android:layout_toEndOf="@+id/iv_photo"
            android:background="@drawable/bg_button_img_rounded"
            android:drawableStart="@drawable/ic_add_a_photo"
            android:drawableTint="@android:color/white"
            android:paddingLeft="8dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="24dp"
            android:src="@drawable/logo"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="2dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubik_bold"
            android:text="Allan Jackson"
            android:textSize="20sp"
            android:layout_below="@+id/iv_photo"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Allan Jackson solicitou um serviço de encanamento de Júlio Ferreira há cinco meses."
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:textSize="18dp"/>


        <TextView
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="260dp"
            android:text="Concluído."
            android:drawableRight="@drawable/ic_baseline_check_24"
            android:paddingRight="20dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Allan Jackson solicitou um serviço de pintor de Rogério Cruz há três meses."
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="130dp"
            android:textSize="18dp"/>


        <TextView
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="260dp"
            android:text="Concluído."
            android:drawableRight="@drawable/ic_baseline_check_24"
            android:paddingRight="20dp"
            android:textColor="@android:color/black"/>




    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>