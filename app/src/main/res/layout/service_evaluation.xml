<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Forms">


    <Toolbar
        android:id="@+id/forms"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@android:color/holo_orange_dark"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Avalie a sua experiência!"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/retangulo_arredondado"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="O prestador de serviços utilizou máscara durante o atendimento?"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            />

        <Spinner
            android:layout_width="145dp"
            android:layout_height="30dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="40dp"
            android:entries="@array/avalicao"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/retangulo_arredondado"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="@string/forms2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"/>

        <Spinner
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:entries="@array/urgencia" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/retangulo_arredondado"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="@string/forms3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"/>

        <Spinner
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:entries="@array/tipo_servico" />


    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="190dp"
        android:text="AVALIAR"
        android:textStyle="bold"
        android:background="@drawable/button_orange_rounded"/>








</RelativeLayout>