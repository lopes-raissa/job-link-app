<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Start"
    android:padding="13dp"
    android:background="@android:color/holo_orange_dark">

    <TextView
        android:id="@+id/titulo_joblink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá! Seja bem-vind@ ao JobLink!"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/subtitulo_joblink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione o seu perfil."
        android:textSize="25sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/titulo_joblink"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/linear_layout_linha_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/subtitulo_joblink"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_register_freelancer"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="180dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginRight="4dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/freelancer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Freelancer"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_register_client"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="180dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginLeft="4dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="80dp">

            <LinearLayout
                android:id="@+id/select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/clientes"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        tools:layout_editor_absoluteY="518dp"
        android:text="Ao seleciomar o perfil, você será encaminhado para a página escolhida."
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textAlignment="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>


