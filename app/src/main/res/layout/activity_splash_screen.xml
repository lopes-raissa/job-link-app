<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/window_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash"
    tools:context=".ui.SplashScreenActivity">
    
    <TextView
        android:id="@+id/text_view_splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOBLINK"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="#fff"
        android:shadowDy="@android:integer/config_longAnimTime"/>


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:layout_below="@+id/text_view_splash_title"
        android:indeterminateTint="@android:color/white"/>

    <TextView
        android:id="@+id/text_view_splash_subtitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Seus serviÃ§os em um clique."
        android:textAlignment="center"
        android:layout_below="@+id/progress_bar"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#fff"
        android:shadowDy="@android:integer/config_longAnimTime"/>


</RelativeLayout>