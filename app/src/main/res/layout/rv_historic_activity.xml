            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:textSize="18dp"/>


        <TextView
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="260dp"
            android:text="Concluído."
            android:drawableRight="@drawable/ic_baseline_check_24"
            android:paddingRight="20dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Allan Jackson solicitou um serviço de pintor de Rogério Cruz há três meses."
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="130dp"
            android:textSize="18dp"/>


        <TextView
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="260dp"
            android:text="Concluído."
            android:drawableRight="@drawable/ic_baseline_check_24"
            android:paddingRight="20dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Allan Jackson solicitou um serviço de pintor de Rogério Cruz há três meses."
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="240dp"
            android:textSize="18dp"/>


        <TextView
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="260dp"
            android:text="Em processo"
            android:drawableRight="@drawable/ic_baseline_sync_24"
            android:paddingRight="20dp"
            android:textColor="@android:color/black"/>


    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>